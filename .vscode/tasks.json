{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Deploy",
            "type": "shell",
            "command": [
                "flutter pub get",
                "flutter build web --web-renderer html --release",
                "echo 'erkam.dev' > build/web/CNAME",
                "git checkout gh-pages",
                "git add -f build",
                "git commit -m 'update'",
                "git push origin gh-pages -f"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
