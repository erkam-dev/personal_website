{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Deploy",
            "type": "shell",
            "command": [
                "flutter pub get &&",
                "flutter build web --web-renderer html --release &&",
                "echo 'erkam.dev' > build/web/CNAME &&",
                "cd build/web &&",
                "git init &&",
                "git remote add origin https://github.com/erkam-dev/personal_website.git &&",
                "git checkout -b gh-pages &&",
                "git add . &&",
                "git commit -m 'update' &&",
                "git push -u origin gh-pages -f &&",
                "cd ../.. &&",
                "rm -rf build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}